@model List<Category>
<div class="container">
    <div class="row pt-4 pb-3">
    <div class="col-6">
        <h2 class="text-body-emphasis">
            Category List
        </h2>
    </div>
    <div class="col-6">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Category
        </a>
    </div>
    </div>
<table class="table table-bordered table-striped">
    <thread>
    <tr>
        <th class="text-body-emphasis">
            Category Name
        </th>
        <th class ="text-body-emphasis">
            Display Order
        </th>
    </tr>
    </thread>
    <tbody>
        @foreach (var obj in Model.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td class ="text-body"> @obj.Name </td>
                <td class ="text-body"> @obj.DisplayOrder </td>
            </tr>
        }
    </tbody>
</table>
</div>