@model List<Category>
@* TempData Notification *@
@*if (TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}*@


@* Partial View Notification *@
<partial name ="_Notification"/>

<div class="container">
    <div class="row pt-4 pb-3">
    <div class="col-6">
        <h2 class="text-body-emphasis">
            Category List
        </h2>
    </div>
    <div class="col-6">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Category
        </a>
    </div>
    </div>
<table class="table table-bordered table-striped">
    <thread>
    <tr>
        <th class="text-body-emphasis">
            Category Name
        </th>
        <th class ="text-body-emphasis">
            Display Order
        </th>
        <th></th>
    </tr>
    </thread>
    <tbody>
        @foreach (var obj in Model.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td class ="text-body"> @obj.Name </td>
                <td class ="text-body"> @obj.DisplayOrder </td>
                <td>
                    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                        <div class="btn-group me-2 w-25" role="group" aria-label="First group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id ="@obj.Id" class="btn btn-outline-primary btn-sm text-light">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        </div>
                        <div class="btn-group w-25" role="group" aria-label="Second group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger btn-sm text-light">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>